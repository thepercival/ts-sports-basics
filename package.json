{
  "name": "ts-sports-basics",
  "version": "1.0.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && npm run rename:esm",
    "clean": "rimraf dist",
    "rename:esm": "./scripts/fix-mjs.sh",
    "rename:test:esm": "./scripts/fix-test-mjs.sh",
    "prepack": "npm run build",
    "test:build": "npm run test:build:cjs && npm run test:build:esm",
    "test:build:cjs": "tsc -p tsconfig.test.cjs.json",
    "test:build:esm": "tsc -p tsconfig.test.esm.json && npm run rename:test:esm",
    "test:esm": "TS_NODE_PROJECT='./tsconfig.test.esm.json' mocha 'dist/tests/esm/**/*.spec.{mts,js}'",
    "test:cjs": "TS_NODE_PROJECT='./tsconfig.test.cjs.json' mocha 'dist/tests/cjs/**/*.spec.{cts,js}'",
    "test": "npm run test:esm && npm run test:cjs"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.1",
    "mocha": "^11.7.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
